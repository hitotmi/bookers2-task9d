<h2>Books search for "<%= @word %>"</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= book.tag %></td>
        <td id="favorite_buttons_<%= book.id %>"><%= render "favorites/favorite", book: book %></td>
        <td>コメント数<%= book.book_comments.count %></td>
        <td><%= render "books/raty",book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>